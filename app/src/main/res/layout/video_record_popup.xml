<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="500dp"
    android:background="@drawable/video_record_popup_background"
    android:orientation="vertical">

    <TextView
        android:id="@+id/video_record_tv_fir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp"
        android:textColor="#5A5A64"
        android:fontFamily="@font/notosanscjkjp_medium"
        android:gravity="center_horizontal"
        android:text="11111"
        android:textSize="30sp" />

    <TextView
        android:id="@+id/video_record_tv_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#5A5A64"
        android:layout_below="@id/video_record_tv_fir"
        android:fontFamily="@font/notosanscjkjp_medium"
        android:includeFontPadding="false"
        android:layout_marginTop="-5dp"
        android:text="22222"
        android:gravity="center_horizontal"
        android:textSize="30sp" />

    <Button
        android:id="@+id/cancel_button"
        android:layout_width="280dp"
        android:background="@drawable/video_record_popup_button"
        android:layout_height="60dp"
        android:layout_below="@id/video_record_tv_sec"
        android:includeFontPadding="false"
        android:textSize="30sp"
        android:textColor="#5A5A64"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="102dp"
        android:text="いいえ"/>

    <Button
        android:id="@+id/determine_button"
        android:layout_width="280dp"
        android:background="@drawable/video_record_popup_button"
        android:layout_height="60dp"
        android:textSize="30sp"
        android:textColor="#5A5A64"
        android:layout_toEndOf="@id/cancel_button"
        android:layout_alignTop="@id/cancel_button"
        android:layout_alignBottom="@id/cancel_button"
        android:text="はい"
        android:layout_marginLeft="36dp"
        />

</RelativeLayout>