<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/topReal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_body"
    android:orientation="vertical"
    tools:context=".activity.IjkplayerDetailActivity">

    <FrameLayout
        android:id="@+id/ijkPlayer_frame"
        android:layout_width="800dp"
        android:layout_height="600dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="150dp">


        <com.example.hometrainng.customview.IjkplayerVideoViewRecord
            android:id="@+id/ijkPlayer_textureView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="76dp"
            android:visibility="visible" />


        <ImageView
            android:id="@+id/ijkplayer_img"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="76dp"
            android:scaleType="fitXY"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/full_screen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:layout_marginRight="25dp"
            android:layout_marginBottom="84dp"
            android:src="@mipmap/full_screen"
            android:textColor="@color/button_color" />


        <RelativeLayout
            android:id="@+id/seek_relativelayout"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="56dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/ijkplayer_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_background"
                android:thumb="@null" />

            <TextView
                android:id="@+id/ijkPlayerTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-7dp"
                android:fontFamily="@font/notosanscjkjp_demilight"
                android:text="00:00"
                android:textColor="@color/button_color"
                android:textSize="26sp" />

            <TextView
                android:id="@+id/duration_tv_all"
                android:layout_marginTop="-7dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:fontFamily="@font/notosanscjkjp_demilight"
                android:text="03:00"
                android:textColor="@color/button_color"
                android:textSize="26dp" />
        </RelativeLayout>
        <LinearLayout
            android:id="@+id/popup_linear"
            android:layout_width="500dp"
            android:layout_height="130dp"
            android:layout_gravity="center"
            android:background="@drawable/menu_dialog_background"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/retreat_img"
                android:layout_width="76dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@mipmap/noreact" />

            <ImageView
                android:id="@+id/play_img"
                android:layout_width="55dp"
                android:layout_height="64dp"
                android:layout_gravity="center_vertical"
                android:src="@mipmap/play" />

            <ImageView
                android:id="@+id/fast_forward_img"
                android:layout_width="76dp"
                android:layout_height="90dp"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:src="@mipmap/fast_forward" />
        </LinearLayout>


    </FrameLayout>


    <RelativeLayout
        android:id="@+id/linear_title"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/back_img"
            android:layout_width="112dp"
