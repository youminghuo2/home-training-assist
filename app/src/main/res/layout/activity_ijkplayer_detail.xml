<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_body"
    android:orientation="vertical"
    tools:context=".activity.IjkplayerDetailActivity">

    <View
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">


        <LinearLayout
        android:id="@+id/linear_left_part"
        android:layout_width="790dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

            <LinearLayout
            android:id="@+id/title_linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <ImageView
                android:layout_marginTop="5dp"
                android:id="@+id/back_img"
                android:layout_width="112dp"
                android:layout_height="60dp"
                android:src="@mipmap/back" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-45dp"
                android:layout_marginLeft="560dp"
                android:fontFamily="@font/notosanscjkjp_bold"
                android:text="@string/ijkplayer_text"
                android:textColor="@color/colorTitle"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/ijkplayer_detail_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-10dp"
                android:layout_marginLeft="234dp"
                android:fontFamily="@font/notosanscjkjp_bold"
                android:text="@string/ijkplayer_second_text"
                android:textColor="@color/button_frame"
                android:textSize="24dp" />

            </LinearLayout>

            <FrameLayout
                android:id="@+id/ijkPlayer_frameLayout"
                android:layout_width="match_parent"
                android:layout_height="406dp"
                android:layout_marginLeft="70dp">

                <ImageView
                    android:id="@+id/image_detail"
                    android:layout_width="720dp"
                    android:layout_height="406dp"
                    android:layout_marginRight="20dp"
                    android:scaleType="fitXY"
                    android:visibility="visible"
                    android:src="@mipmap/ceshi" />

                <TextView
                    android:id="@+id/time_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:background="@drawable/time_background"
                    android:alpha="0.7"
                    android:text="03:00"
                    android:textSize="50sp"
                    android:textColor="@color/button_color"/>

                <com.example.hometrainng.customview.IjkplayerVideoView
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:id="@+id/ijkPlayer_textureView"
                    android:layout_height="match_parent"/>

                <ImageView
                    android:id="@+id/full_screen"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginRight="25dp"
                    android:layout_marginBottom="24dp"
                    android:src="@mipmap/full_screen"
                    android:textColor="@color/button_color" />



            </FrameLayout>

            <RelativeLayout
                android:id="@+id/button_relativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/play_video_img"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="282dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/menu_video" />

                <TextView
                    android:layout_below="@+id/play_video_img"
                    android:layout_width="wrap_content"
                    android:fontFamily="@font/notosanscjkjp_bold"
                    android:textSize="24sp"
                    android:layout_marginTop="-10dp"
                    android:layout_marginLeft="267dp"
                    android:layout_height="wrap_content"
                    android:text="@string/menu_video_text"/>


                <ImageView
                    android:id="@+id/play_img"
                    android:layout_marginTop="43dp"
                    android:layout_marginLeft="498dp"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:src="@mipmap/menu_play" />
                <TextView
                    android:layout_below="@id/play_img"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="-10dp"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:layout_marginLeft="514dp"
                    android:fontFamily="@font/notosanscjkjp_bold"
                    android:text="@string/menu_player_text"/>
            </RelativeLayout>

            <RelativeLayout
            android:id="@+id/seek_relativelayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_marginTop="20dp"
            android:layout_height="56dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="20dp"
            android:orientation="horizontal">

            <SeekBar
                android:id="@+id/ijkplayer_seekbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:max="100"
                android:paddingStart="0dp"
                android:paddingEnd="0dp"
                android:progress="0"
                android:progressDrawable="@drawable/seekbar_background"
                android:thumb="@null" />

            <TextView
                android:id="@+id/ijkPlayer_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="-7dp"
                android:fontFamily="@font/notosanscjkjp_demilight"
                android:text="00:00"
                android:textColor="@color/button_color"
                android:textSize="26sp" />

<!--            <TextView-->
<!--                android:id="@+id/duration_tv_all"-->
<!--                android:layout_marginTop="-7dp"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_alignParentRight="true"-->
<!--                android:fontFamily="@font/notosanscjkjp_demilight"-->
<!--                android:text="03:00"-->
<!--                android:textColor="@color/button_color"-->
<!--                android:textSize="26dp" />-->

        </RelativeLayout>


    </LinearLayout>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/nest_ijkplayer_detail"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:scrollbars="vertical"
        android:scrollbarSize="6dp"
        android:scrollbarThumbVertical="@drawable/scroller_bar"
        android:layout_marginBottom="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="24sp"
                android:layout_gravity="center_horizontal"
                android:fontFamily="@font/notosanscjkjp_medium"
                android:layout_marginTop="65dp"
                android:textColor="@color/button_color"
                android:text="@string/ijkplayer_nest_tv_text"/>
            <TextView
                android:id="@+id/ijkplayer_detail_videoCommonComment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="48dp"
                android:layout_marginTop="-15dp"
                android:layout_marginRight="50dp"
                android:textColor="@color/button_frame"
                android:textSize="24sp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/notosanscjkjp_medium"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_marginTop="39dp"
                android:layout_gravity="center_horizontal"
                android:textSize="24sp"
                android:layout_height="wrap_content"
                android:text="@string/ijkplayer_nest_sec_tv_text"
                android:fontFamily="@font/notosanscjkjp_medium"
                android:textColor="@color/button_color" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginLeft="35dp"
                android:layout_marginRight="35dp"
                android:background="@drawable/view_color_background"
                android:orientation="vertical">
                <TextView
                    android:id="@+id/specifyStartTime"
                    android:paddingLeft="19dp"
                    android:paddingTop="12dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="24sp"
                    android:fontFamily="@font/notosanscjkjp_regular"
                    android:textColor="@color/button_color" />

                <TextView
                    android:layout_marginLeft="17dp"
                    android:layout_marginTop="-20dp"
                    android:layout_marginRight="17dp"
                    android:id="@+id/ijkplayer_detail_individualComment"
                    android:textSize="24sp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    />
            </LinearLayout>

        </LinearLayout>



    </androidx.core.widget.NestedScrollView>


    </LinearLayout>

</RelativeLayout>