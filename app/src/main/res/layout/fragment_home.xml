<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android_custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <LinearLayout
        android:id="@+id/rel_top_block"
        android:layout_width="match_parent"
        android:layout_height="238dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="160dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/circle_icon_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/circle_icon"
                    android:drawablePadding="5dp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:gravity="center"
                    android:text="@string/circle_icon_text"
                    android:textColor="@color/button_color"
                    android:textSize="18sp" />

                <RelativeLayout
                    android:layout_width="146dp"
                    android:layout_height="146dp"
                    android:layout_below="@+id/circle_icon_tv"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="30dp">

                    <com.example.hometrainng.customview.RoundProgressBar
                        android:id="@+id/roundProgressBar2"
                        android:layout_width="146dp"
                        android:layout_height="146dp"
                        android_custom:roundColor="@color/circle_round"
                        android_custom:roundProgressColor="#14A064"
                        android_custom:roundWidth="10dp"
                        android_custom:textColor="#14A064" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_percent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:textColor="@color/colorTitle"
                            android:textSize="70sp" />

                        <TextView
                            android:id="@+id/tv_percent1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginTop="-20dp"
                            android:text="%"
                            android:textColor="@color/colorTitle"
                            android:textSize="30sp" />
                    </LinearLayout>
                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="5dp"
                android:orientation="vertical"
                tools:ignore="NestedWeights">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="5dp"
                    android:drawableLeft="@mipmap/android_line"
                    android:drawablePadding="15dp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:text="達成度グラフ"
                    android:textColor="@color/button_color"
                    android:textSize="18sp" />

                <com.github.mikephil.charting.charts.LineChart
                    android:id="@+id/chart_line"
                    android:layout_width="match_parent"
                    android:layout_marginRight="5dp"
                    android:layout_height="150dp"
                    android:layout_marginTop="-5dp"
                    android:layout_alignTop="@id/circle_icon_tv"
                    android:layout_toRightOf="@id/roundProgressBar2" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="45dp"
                    android:layout_marginRight="20dp"
                    android:gravity="right|bottom"
                    android:layout_marginTop="-8dp"
                    android:orientation="horizontal"
                    android:paddingBottom="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="10dp"
                        android:fontFamily="@font/notosanscjkjp_bold"
                        android:text="目標達成累計"
                        android:textColor="@color/button_color"
                        android:textSize="11sp" />

                    <TextView
                        android:id="@+id/number_text"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="5dp"
                        android:text="2"
                        android:textColor="@color/button_color"
                        android:textSize="30sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/notosanscjkjp_bold"
                        android:text="日"
                        android:textColor="@color/button_color"
                        android:textSize="11sp" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="213dp"
                android:layout_marginRight="5dp"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="23dp"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/note" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_toRightOf="@id/aims_icon"
                        android:fontFamily="@font/notosanscjkjp_medium"
                        android:text="@string/times_text"
                        android:textColor="@color/button_color"
                        android:textSize="18sp" />
                </LinearLayout>


                <Button
                    android:id="@+id/time_button2"
                    android:layout_width="190dp"
                    android:layout_height="70dp"
                    android:layout_marginTop="45dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/time_button"
                    android:fontFamily="@font/notosanscjkjp_bold"
                    android:textColor="@color/button_color"
                    android:textSize="30sp"
                    android:text="预约"
                    android:gravity="center"
                    android:visibility="gone" />

                <LinearLayout
                    android:id="@+id/all_linearlayout"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <Button
                        android:id="@+id/time_button"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="15dp"
                        android:layout_marginBottom="15dp"

                        android:layout_weight="1"
                        android:background="@drawable/time_button1"
                        android:fontFamily="@font/notosanscjkjp_bold"
                        android:gravity="center"
                        android:textColor="@color/button_color"
                        android:textSize="26sp"
                        android:visibility="gone" />


                    <FrameLayout
                        android:id="@+id/time_frameLayout"
                        android:layout_width="match_parent"
                        android:layout_marginLeft="-5dp"
                        android:layout_height="120dp">

                        <View
                            android:id="@+id/times_clock_view"
                            android:layout_width="3dp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginLeft="68dp"
                            android:background="@color/button_color"
                            android:rotation="45" />

                        <TextView
                            android:id="@+id/month_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="18dp"
                            android:fontFamily="@font/dinregular"
                            android:layout_marginTop="5dp"
                            android:textColor="@color/button_color"
                            android:textSize="58sp" />

                        <TextView
                            android:id="@+id/date_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="77dp"
                            android:layout_marginTop="40dp"
                            android:fontFamily="@font/dinregular"
                            android:textColor="@color/button_color"
                            android:textSize="58sp" />

                        <TextView
                            android:id="@+id/home_week_textView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="right|bottom"
                            android:layout_marginRight="30dp"
                            android:fontFamily="@font/notosanscjkjp_bold"
                            android:textColor="@color/button_color"
                            android:textSize="26sp" />
                    </FrameLayout>

                    <LinearLayout
                        android:id="@+id/times_linearLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/times_icon"
                            android:layout_width="22dp"
                            android:layout_height="22dp"
                            android:layout_marginTop="20dp"
                            android:src="@mipmap/times_clock" />

                        <TextView
                            android:id="@+id/time_tv"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="-10dp"
                            android:fontFamily="@font/notosanscjkjp_demilight"
                            android:textColor="@color/button_color"
                            android:textSize="30sp" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/aims_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <ImageView
                        android:id="@+id/aims_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:src="@mipmap/aims_icon" />

                    <TextView
                        android:id="@+id/aims_title_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginTop="10dp"
                        android:layout_toRightOf="@id/aims_icon"
                        android:fontFamily="@font/notosanscjkjp_medium"
                        android:text="@string/aims_title"
                        android:textColor="@color/button_color"
                        android:textSize="18sp" />

                    <!--                    <TextView-->
                    <!--                        android:layout_width="25dp"-->
                    <!--                        android:layout_height="25dp"-->
                    <!--                        android:layout_marginLeft="10dp"-->
                    <!--                        android:layout_marginTop="20dp"-->
                    <!--                        android:layout_toRightOf="@id/aims_title_id"-->
                    <!--                        android:background="@drawable/aims_title_background"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:text="@string/aims_title_circle"-->
                    <!--                        android:textColor="@color/white"-->
                    <!--                        android:textSize="8sp" />-->
                    <ImageView
                        android:id="@+id/aims_new_icon"
                       android:layout_marginTop="20dp"
                        android:layout_marginLeft="5dp"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_gravity="right"
                        android:visibility="invisible"
                        android:layout_toRightOf="@id/aims_title_id"
                        android:src="@mipmap/new_angle" />

                    <View

                        android:id="@+id/subject_view"
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/view_color" />
                </RelativeLayout>


                <TextView
                    android:id="@+id/aims_text"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="-5dp"
                    android:layout_below="@id/aims_view"
                    android:layout_alignParentBottom="true"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:maxLines="2"
                    android:textSize="18sp" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/subject_icon_linearLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="50dp">

                    <ImageView
                        android:id="@+id/subject_icon"
                        android:layout_width="23dp"
                        android:layout_height="25dp"
                        android:layout_marginTop="10dp"
                        android:src="@mipmap/subject" />

                    <TextView
                        android:id="@+id/subject_title_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_toRightOf="@id/subject_icon"
                        android:fontFamily="@font/notosanscjkjp_medium"
                        android:text="@string/subject_title"
                        android:textColor="@color/button_color"
                        android:textSize="18sp" />

                    <ImageView
                        android:id="@+id/subject_news_icon"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:layout_gravity="right"
                        android:visibility="invisible"
                        android:layout_toRightOf="@id/subject_title_id"
                        android:src="@mipmap/new_angle" />


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="-5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/view_color" />


                </RelativeLayout>

                <TextView
                    android:id="@+id/issues_tv"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="-10dp"
                    android:ellipsize="end"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:maxLines="2"
                    android:textSize="18sp" />

            </LinearLayout>


        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/rel_top_block"
        android:layout_marginBottom="50dp"
        android:background="@color/color_body">

        <LinearLayout
            android:layout_width="280dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">


                <FrameLayout
                    android:layout_width="280dp"
                    android:layout_height="207dp">

                    <com.zyp.cardview.YcCardView
                        android:id="@+id/cardview_information"
                        android:layout_width="266dp"
                        android:layout_marginTop="16dp"
                        android_custom:ycCardBackgroundColor="@color/white"
                        android:layout_height="match_parent"
                        android_custom:ycCardElevation="4dp"
                        android_custom:ycStartShadowColor="#B314A064">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="5dp"
                            android:layout_marginBottom="5dp"
                            android:background="@color/white"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="-7dp"
                                android:fontFamily="@font/notosanscjkjp_regular"
                                android:text="@string/cardView_information_title"
                                android:textColor="@color/button_color"
                                android:textSize="16sp" />

                            <TextView
                                android:id="@+id/notice_title"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="-7dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/notosanscjkjp_medium"
                                android:includeFontPadding="false"
                                android:maxLines="1"
                                android:textColor="@color/button_color"
                                android:textSize="18sp" />

                            <TextView
                                android:id="@+id/notice_content"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="20dp"
                                android:layout_marginTop="-5dp"
                                android:ellipsize="end"
                                android:fontFamily="@font/notosanscjkjp_regular"
                                android:maxLines="3"
                                android:textColor="@color/button_frame"
                                android:textSize="13.5sp" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="bottom"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/notice_create_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="20dp"
                                    android:fontFamily="@font/notosanscjkjp_regular"
                                    android:gravity="bottom"
                                    android:textColor="@color/button_color"
                                    android:textSize="13.5sp" />
                            </LinearLayout>

                        </LinearLayout>
                    </com.zyp.cardview.YcCardView>

                    <ImageView
                        android:id="@+id/notice_news_icon"
                        android:layout_width="29dp"
                        android:layout_marginTop="5dp"
                        android:layout_height="29dp"
                        android:layout_gravity="right"
                        android:scaleType="fitXY"
                        android:visibility="invisible"
                        android:src="@mipmap/new_angle" />


                </FrameLayout>





                <FrameLayout
                    android:layout_width="280dp"
                    android:layout_height="207dp">


                    <com.zyp.cardview.YcCardView
                        android:id="@+id/cardview_doctor"
                        android:layout_width="266dp"
                        android:layout_marginTop="10dp"
                        android_custom:ycCardBackgroundColor="@color/white"
                        android:layout_height="match_parent"
                        android_custom:ycCardElevation="4dp"
                        android_custom:ycStartShadowColor="#B314A064">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="@color/white"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/img"
                                android:layout_width="34.58dp"
                                android:layout_height="34.58dp"
                                android:layout_marginLeft="15dp"
                                android:src="@mipmap/msg_info" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_toRightOf="@+id/img"
                                android:layout_marginLeft="15dp"
                                android:layout_marginTop="-5dp"
                                android:fontFamily="@font/notosanscjkjp_regular"
                                android:text="@string/circle_icon_text_behind"
                                android:textColor="@color/button_color"
                                android:textSize="16sp" />
                        </RelativeLayout>

                        <TextView
                            android:id="@+id/message_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="-5dp"
                            android:ellipsize="end"
                            android:maxLines="1"
                            android:fontFamily="@font/notosanscjkjp_medium"
                            android:includeFontPadding="false"
                            android:textColor="@color/button_color"
                            android:textSize="18sp" />

                        <TextView
                            android:id="@+id/message_content"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="3dp"
                            android:ellipsize="end"
                            android:fontFamily="@font/notosanscjkjp_regular"
                            android:includeFontPadding="false"
                            android:maxLines="3"
                            android:textColor="@color/button_frame"
                            android:textSize="13.5sp" />


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="bottom"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/message_create_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="22dp"
                                android:fontFamily="@font/notosanscjkjp_regular"
                                android:textColor="@color/button_color"
                                android:textSize="13.5sp" />
                        </LinearLayout>

                    </LinearLayout>
                    </com.zyp.cardview.YcCardView>

                    <ImageView
                        android:id="@+id/message_news_icon"
                        android:layout_width="29dp"
                        android:layout_height="29dp"
                        android:layout_marginTop="5dp"
                        android:layout_gravity="right"
                        android:visibility="invisible"
                        android:scaleType="fitXY"
                        android:src="@mipmap/new_angle" />

                </FrameLayout>




        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/fragment_home_recycleView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:layout_marginRight="51dp" />
        </LinearLayout>

    </LinearLayout>


</LinearLayout>