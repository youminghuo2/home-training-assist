<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/color_body">

    <ImageView
        android:id="@+id/back_to_tab4"
        android:layout_width="112dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@mipmap/back"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/counseling_room_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:fontFamily="@font/notosanscjkjp_bold"
        android:text="@string/counseling_title"
        android:textColor="@color/colorTitle"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideLineBegin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/counseling_room_title">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/image_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/note"
                android:layout_marginLeft="195dp"
                android:layout_marginTop="20dp"/>
            <TextView
                android:id="@+id/left_content_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
               android:layout_marginLeft="30dp"
                android:layout_toRightOf="@id/image_icon"
                android:layout_marginTop="20dp"
                android:drawablePadding="25dp"
                android:fontFamily="@font/notosanscjkjp_medium"
                android:includeFontPadding="false"
                android:text="@string/right_counseling_label"
                android:textColor="@color/textColor"
                android:textSize="30sp" />

            <include
                android:id="@+id/current_user"
                layout="@layout/activity_user_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/left_content_label"
                android:layout_marginLeft="130dp"
                android:layout_marginTop="40dp" />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/left_content_label"
                android:layout_toRightOf="@+id/current_user"
                android:orientation="vertical">

                <include
                    android:id="@+id/counseling_date"
                    layout="@layout/layout_counseling_date"
                    android:layout_width="210dp"
                    android:layout_height="180dp"
                    android:layout_marginLeft="40dp"
                    android:layout_marginTop="18dp" />

                <TextView
                    android:id="@+id/counseling_time"
                    style="@style/TabTitleStyleSmaller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/counseling_date"
                    android:layout_marginLeft="30dp"
                    android:drawableStart="@mipmap/times_clock"
                    android:drawablePadding="5dp"
                    android:textSize="34sp"
                    android:fontFamily="@font/dinregular"
                    tools:ignore="MissingConstraints" />
            </RelativeLayout>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="420dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1">

            <RelativeLayout
                android:id="@+id/rl_right"
                android:layout_width="match_parent"
                android:layout_height="60dp">

                <ImageView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginLeft="60dp"
                    android:scaleType="fitXY"
                    android:src="@mipmap/msg_info" />

                <TextView
                    android:id="@+id/right_content_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="125dp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:includeFontPadding="false"
                    android:text="@string/left_counseling_label"
                    android:textColor="@color/textColor"
                    android:textSize="24sp" />
            </RelativeLayout>

            <RadioGroup
                android:id="@+id/rg_themes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_right"
                android:layout_marginLeft="75dp"
                android:layout_marginTop="25dp">

                <RadioButton
                    android:id="@+id/rb_theme1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:text="@string/radio_value_1"
                    android:textColor="@color/button_frame"
                    android:textSize="24sp"
                    android:theme="@style/RadioButtonStyle"></RadioButton>

                <RadioButton
                    android:id="@+id/rb_theme2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:includeFontPadding="false"
                    android:text="@string/radio_value_2"
                    android:textColor="@color/button_frame"
                    android:textSize="24sp"
                    android:theme="@style/RadioButtonStyle"></RadioButton>

                <RadioButton
                    android:id="@+id/rb_theme3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:paddingLeft="10dp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:includeFontPadding="false"
                    android:text="@string/radio_value_3"
                    android:textColor="@color/button_frame"
                    android:textSize="24sp"
                    android:theme="@style/RadioButtonStyle"></RadioButton>

                <RadioButton
                    android:id="@+id/rb_theme4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/notosanscjkjp_medium"
                    android:includeFontPadding="false"
                    android:paddingLeft="10dp"
                    android:text="@string/radio_value_4"
                    android:textColor="@color/button_frame"
                    android:textSize="24sp"
                    android:theme="@style/RadioButtonStyle"></RadioButton>
            </RadioGroup>

            <Button
                android:id="@+id/btn_send_message"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_below="@+id/rg_themes"
                android:layout_marginStart="75dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/button_send_message_rounded_corners"
                android:fontFamily="@font/notosanscjkjp_bold"
                android:gravity="center"
                android:includeFontPadding="false"
                android:text="@string/send_message"
                android:textColor="@color/textColor"
                android:textSize="26sp" />

        </RelativeLayout>
    </LinearLayout>

    <View
        android:id="@+id/counseling_room_line"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="70dp"
        android:layout_marginTop="25dp"
        android:background="@color/colorPrimary"
        app:layout_constraintTop_toBottomOf="@id/ll_content"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/ll_below"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/counseling_room_line">

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/countdown_title1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:paddingTop="40dp"
                android:gravity="top"
                android:fontFamily="@font/notosanscjkjp_bold"
                android:text="@string/countdown_label1"
                android:textColor="@color/textColor"
                android:textSize="30sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/countdown"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:baselineAligned="true"
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            tools:ignore="MissingConstraints">

            <TextView
                android:id="@+id/countdown_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="@font/dinregular"
                android:layout_marginLeft="60dp"
                android:gravity="top"
                android:text="213"
                android:textColor="@color/textColor"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/countdown_title2"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/notosanscjkjp_bold"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="@string/countdown_label2"
                android:textColor="@color/textColor"
                android:textSize="34sp" />

            <TextView
                android:id="@+id/countdown_minute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:fontFamily="@font/dinregular"
                android:layout_marginLeft="10dp"
                android:gravity="top"
                android:textColor="@color/textColor"
                android:textSize="80sp" />

            <TextView
                android:id="@+id/countdown_title3"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:paddingBottom="10dp"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/notosanscjkjp_bold"
                android:gravity="bottom"
                android:includeFontPadding="false"
                android:text="@string/countdown_label3"
                android:textColor="@color/textColor"
                android:textSize="34sp" />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/counseling_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_send_message_rounded_corners"
        android:paddingLeft="40dp"
        android:paddingTop="10dp"
        android:paddingRight="40dp"
        android:paddingBottom="10dp"
        android:textColor="@color/colorTitle"
        android:textSize="30sp"
        android:visibility="gone"
        app:layout_constraintEnd_toStartOf="@id/guideLineBegin"
        tools:ignore="MissingConstraints" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toTopOf="@+id/bottom_view">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="25dp"
            android:layout_toLeftOf="@+id/counseling_cancel"
            android:fontFamily="@font/notosanscjkjp_medium"
            android:includeFontPadding="false"
            android:text="@string/counseling_room_label"
            android:textColor="@color/button_frame" />

        <Button
            android:id="@+id/counseling_cancel"
            android:layout_width="170dp"
            android:layout_height="40dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="70dp"
            android:background="@drawable/button_cancel_rounded_corners"
            android:fontFamily="@font/notosanscjkjp_medium"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="@string/counseling_button2"
            android:textColor="@color/button_frame"
            android:textSize="20sp"
            tools:ignore="MissingConstraints" />
    </RelativeLayout>

    <View
        android:id="@+id/bottom_view"
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bar"
        app:layout_constraintBottom_toBottomOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>