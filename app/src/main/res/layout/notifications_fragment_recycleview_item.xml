<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="266dp"
    android:layout_height="195dp"
    android:layout_marginLeft="25dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="26dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.zyp.cardview.YcCardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:ycCardBackgroundColor="@color/white"
            app:ycCardElevation="4dp"
            app:ycStartShadowColor="#B314A064">

        <ImageView
            android:background="@color/colorBlack"
            android:id="@+id/notification_img"
            android:layout_width="match_parent"
            android:layout_height="151dp"
            android:scaleType="centerInside"
            android:src="@mipmap/android_line" />

        </com.zyp.cardview.YcCardView>
        <TextView
            android:id="@+id/msg_tv"
            android:ellipsize="end"
            android:maxLines="1"
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="14dp"
            android:layout_marginRight="14dp"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/notosanscjkjp_bold"
            android:textSize="14sp" />

        <RelativeLayout
            android:id="@+id/rl_time"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="109dp"
            android:background="#B3FFFFFF">

            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="3dp"
                android:src="@mipmap/notification_fragment_player" />


            <TextView
                android:id="@+id/date_time_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="11dp"
                android:fontFamily="@font/notosanscjkjp_medium"
                android:text="2020.1.3"
                android:textSize="18sp" />
        </RelativeLayout>

    </FrameLayout>

</LinearLayout>