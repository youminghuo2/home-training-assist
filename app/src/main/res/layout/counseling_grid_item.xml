<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="69dp"
    android:background="@color/backgroundColor"
    android:orientation="horizontal">

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/item_empty"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <View
                android:layout_width="9dp"
                android:layout_height="2dp"
                android:layout_marginRight="1.5dp"
                android:background="@color/color_body2" />

            <View
                android:layout_width="9dp"
                android:layout_height="2dp"
                android:layout_marginLeft="1.5dp"
                android:background="@color/color_body2" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_schedule"
            android:layout_width="37dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_height="37dp"
            android:background="@drawable/round_text_green"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@drawable/round_schedule_item"
            android:gravity="center" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <LinearLayout
            android:id="@+id/item_empty2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="horizontal">

            <View
                android:layout_width="9dp"
                android:layout_height="2dp"
                android:layout_marginRight="1.5dp"
                android:background="@color/color_body2" />

            <View
                android:layout_width="9dp"
                android:layout_height="2dp"
                android:layout_marginLeft="1.5dp"
                android:background="@color/color_body2" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_schedule2"
            android:layout_width="37dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:layout_height="37dp"
            android:background="@drawable/round_text_green"
            android:gravity="center"
            android:text="1"
            android:textColor="#ffffff"
            android:textSize="28sp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view2"
            android:layout_width="37dp"
            android:layout_height="37dp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            android:background="@drawable/round_schedule_item"
            android:gravity="center" />
    </RelativeLayout>
</LinearLayout>