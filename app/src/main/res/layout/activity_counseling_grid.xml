<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundColor">

    <ImageView
        android:id="@+id/back_img"
        android:layout_width="wrap_content"
        android:layout_marginLeft="-3dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:src="@mipmap/back" />

    <TextView
        android:id="@+id/rules_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:fontFamily="@font/notosanscjkjp_bold"
        android:text="@string/counseling_grid_title"
        android:textColor="@color/colorTitle"
        android:textSize="30sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp">

            <LinearLayout
                android:id="@+id/ll_previous"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_marginRight="20dp"
                android:layout_toLeftOf="@+id/ll_next"
                android:background="@drawable/round_previous_buttom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_previous"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="↑ 前の週"
                    android:textColor="@color/linear_frame"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_next"
                android:layout_width="120dp"
                android:layout_height="40dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="70dp"
                android:background="@drawable/round_next_buttom"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_next"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="15dp"
                    android:gravity="center"
                    android:text="↓ 次の週"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal">

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="54dp"
                android:background="@color/grid_divider_gray" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_time"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginStart="55dp"
                android:scrollbars="none" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:background="@color/grid_divider_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="490dp"
            android:layout_marginLeft="70dp"
            android:layout_marginRight="70dp">


            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/list_date"
                android:layout_width="55dp"
                android:layout_height="match_parent"
                android:scrollbars="none" />

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/grid_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_toRightOf="@+id/list_date"
                android:scrollbars="none" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grid_divider_gray" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="54dp"
                android:background="@color/grid_divider_gray" />

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_alignParentRight="true"
                android:background="@color/grid_divider_gray" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="70dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="70dp"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_first"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="56dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/round_text_green"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/firstCandidate"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="第一候補日時"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ll_first"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/round_text_green"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text="2"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/secondCandidate"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="第二候補日時"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ll_second"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="37dp"
                    android:layout_height="37dp"
                    android:background="@drawable/round_text_green"
                    android:gravity="center"
                    android:paddingBottom="3dp"
                    android:text="3"
                    android:textColor="#ffffff"
                    android:textSize="28sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/thirdCandidate"
                    android:layout_width="160dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="15dp"
                    android:text="第三候補日時"
                    android:textColor="@color/textColor"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btn_confirm"
                android:layout_width="230dp"
                android:layout_height="60dp"
                android:layout_alignParentRight="true"
                android:background="@drawable/button_send_counseling"
                android:text="予約を確定する"
                android:textColor="@color/textColor"
                android:textSize="26sp"
                android:textStyle="bold" />
        </RelativeLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="7dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/gradient_bar" />
</RelativeLayout>