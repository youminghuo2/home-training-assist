<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="800dp"
    android:layout_height="500dp"
    android:background="@drawable/fragment_home_dialog_style"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/cancel_counseling_confirm_message"
        android:layout_marginTop="150dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
       android:layout_gravity="center_horizontal"
        android:textColor="@color/textColor"
        android:fontFamily="@font/notosanscjkjp_medium"
        android:textSize="30sp"/>

    <Button
        android:id="@+id/btn_cancel_counseling_confirm_ok"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/rules_button_background"
        android:fontFamily="@font/notosanscjkjp_medium"
        android:text="@string/btn_ok"
        android:textColor="@color/textColor"
        android:textSize="30sp"
        android:layout_gravity="center_horizontal" />

</LinearLayout>